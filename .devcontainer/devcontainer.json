// .devcontainer/devcontainer.json
{
	"name": "Go & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "settings": {
        "go.gopath": "/go",
        "go.toolsGopath": "/go"
    },
    "extensions": [
        "golang.go"
    ],
    "postCreateCommand": "go mod init hello-world && go mod tidy",
    "forwardPorts": [2345],
    "runArgs": ["--init"],
    "containerEnv": {
        "GO111MODULE": "on"
    },
    "remoteUser": "root"
}
